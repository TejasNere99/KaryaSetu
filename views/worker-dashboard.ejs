<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= worker.name %> - Worker Dashboard</title>
  <link rel="stylesheet" href="/Profile/user profile/style.css">
</head>
<body>

  <div class="navbar">
    <h1>KaryaSetu</h1>
    <div class="profile-icon" title="<%= worker.name %>"><%= (worker.name || 'W').trim().charAt(0).toUpperCase() %></div>
  </div>

  <div class="dashboard" id="dashboard" style="display:flex;">
    <div class="sidebar">
      <ul>
        <li class="active" onclick="showSection('jobs', event)">My Jobs</li>
        <li onclick="showSection('chats', event)">Chats</li>
        <li onclick="showSection('notifications', event)">Notifications</li>
        <li onclick="showSection('profile', event)">Profile</li>
        <li onclick="logout()">Logout</li>
      </ul>
    </div>

    <div class="content" id="content">
      <h2>My Jobs</h2>
      <div class="card">Welcome <%= worker.name %>! No active jobs yet.</div>
    </div>
  </div>

  <script>
    const content = document.getElementById("content");
    const sidebarItems = document.querySelectorAll(".sidebar ul li");

    function showSection(section, event) {
      sidebarItems.forEach(item => item.classList.remove("active"));
      event.target.classList.add("active");

      if (section === "jobs") {
        content.innerHTML = `
          <h2>My Jobs</h2>
          <div class="card">Welcome <%= worker.name %>! No active jobs yet.</div>
          <div class="card">Tip: Keep your profile updated to get more requests.</div>
        `;
      }

      if (section === "chats") {
        content.innerHTML = `
          <h2>Chats</h2>
          <div class="chat-container">
            <div class="chat-list">
              <div onclick="openChat('Customer A')">Customer A</div>
              <div onclick="openChat('Customer B')">Customer B</div>
            </div>
            <div class="chat-window">
              <div class="messages" id="messages">
                <div class="msg received">Hi, are you available tomorrow?</div>
                <div class="msg sent">Yes, I am.</div>
              </div>
              <div class="chat-input">
                <input type="text" id="chatInput" placeholder="Type a message...">
                <button onclick="sendMessage()">Send</button>
              </div>
            </div>
          </div>
        `;
      }

      if (section === "notifications") {
        content.innerHTML = `
          <h2>Notifications</h2>
          <div class="card">You received a new booking request.</div>
          <div class="card">Reminder: Verify your phone number.</div>
        `;
      }

      if (section === "profile") {
        content.innerHTML = `
          <h2>Profile</h2>
          <div class="card">
            <b>Name:</b> <%= worker.name %><br>
            <b>Mobile:</b> <%= worker.mobile %><br>
            <b>Category:</b> <%= worker.category %><br>
            <b>Subcategory:</b> <%= worker.subcategory %><br>
            <b>Experience (years):</b> <%= worker.experience %><br>
            <b>Address:</b> <%= worker.address %><br>
          </div>
          <h3>Edit Profile</h3>
          <form onsubmit="event.preventDefault(); alert('Saved!');">
            <label>Name:</label><br>
            <input type="text" value="<%= worker.name %>"><br><br>
            <label>Category:</label><br>
            <input type="text" value="<%= worker.category %>"><br><br>
            <label>Subcategory:</label><br>
            <input type="text" value="<%= worker.subcategory %>"><br><br>
            <label>Experience (years):</label><br>
            <input type="number" step="0.5" value="<%= worker.experience %>"><br><br>
            <label>Address:</label><br>
            <input type="text" value="<%= worker.address %>"><br><br>
            <button type="submit">Save</button>
          </form>
        `;
      }
    }

    function logout() {
      try {
        localStorage.setItem("isUserLoggedIn", "false");
        localStorage.removeItem("userName");
        localStorage.removeItem("userId");
        localStorage.removeItem("isWorkerLoggedIn");
        localStorage.removeItem("workerName");
        localStorage.removeItem("workerId");
      } catch (e) {}
      window.location.href = "/";
    }

    function sendMessage() {
      const input = document.getElementById("chatInput");
      const msgBox = document.getElementById("messages");
      if (input && msgBox && input.value.trim() !== "") {
        const msg = document.createElement("div");
        msg.classList.add("msg", "sent");
        msg.innerText = input.value;
        msgBox.appendChild(msg);
        input.value = "";
        msgBox.scrollTop = msgBox.scrollHeight;
      }
    }

    function openChat(withWhom) {
      alert("Opening chat with " + withWhom);
    }
  </script>
</body>
</html>

